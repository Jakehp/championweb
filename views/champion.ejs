                    <div class="skill-selections">
                      <% var skillGames = championData.skills.mostGames.order %>
                      <% for (var b = 0 ; b < skillGames.length; b++){ %>
                        <div class="<%=skillGames[b][0] === ''+(i+1) ? 'selected' : '' %>">
                        
                          <span><%= skillGames[b][0] === ''+(i+1) ? championData.skills.skillInfo[i].key : "" %></span>
                          
                          <% if(skillGames[b].length === 3 && skillGames[b][0] === ''+(i+1)){ %>
                            <span><%= championData.skills.skillInfo[skillGames[b][2]-1].key %></span>
                          <% } %>

                        </div>
                        

                      <% } %>
                      
                    </div>

                  </div>
                  <% } %>
                </div>
                <div class="build-text"><strong><%= championData.skills.mostGames.winPercent %>%</strong> Win Rate | <strong><%= championData.skills.mostGames.games %></strong> Games </div>


                <h2 class="champion-stats" style="margin-top:55px">Highest Win % Skill Order</h2>
                <div class="skill-order clearfix">

                <div class="skill">
                  <div class="img-placeholder"></div>
                  <div class="skill-selections">
                    <% for (var d = 0; d < 18; d++){ %>
                      <div>
                        <span><%= d + 1 %></span>
                      </div>
                    <% } %>
                  </div>
                </div>

                  <% for (var i = 0 ; i < 4; i++){ %>
                  <div class="skill">
                    <img src="//ddragon.leagueoflegends.com/cdn/<%= pageData.core.ddPatch %>/img/spell/<%= championData.skills.skillInfo[i].img %>" tooltip="<%= championData.skills.skillInfo[i].name %>"/>

                    <div class="skill-selections">
                      <% var skillGames = championData.skills.highestWinPercent.order %>
                      <% for (var b = 0 ; b < skillGames.length; b++){ %>
                        <div class="<%=skillGames[b][0] === ''+(i+1) ? 'selected' : '' %>">
                        
                          <span><%= skillGames[b][0] === ''+(i+1) ? championData.skills.skillInfo[i].key : "" %></span>
                          
                          <% if(skillGames[b].length === 3 && skillGames[b][0] === ''+(i+1)){ %>
                            <span><%= championData.skills.skillInfo[skillGames[b][2]-1].key %></span>
                          <% } %>

                        </div>
                        

                      <% } %>
                      
                    </div>

                  </div>
                  <% } %>

                 

                </div>
                 <div class="build-text"><strong><%= championData.skills.highestWinPercent.winPercent %>%</strong> Win Rate | <strong><%= championData.skills.highestWinPercent.games %></strong> Games </div>

                 <% } %>
                 <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 counter-column">
             <% if (championData.runes.highestWinPercent) { %>
            <h2 class="champion-stats" style="margin-top:40px">Most Frequent Runes</h2>
              <div class="rune-collection">
                <% for(var i = 0; i < championData.runes.mostGames.runes.length; i++){ %> 
                <div class="rune-type-area" style="width:98%">
                  <div class="rune-img">
                    <img src="//ddragon.leagueoflegends.com/cdn/<%= pageData.core.ddPatch %>/img/rune/<%= championData.runes.mostGames.runes[i].img %>" /> <strong><%= championData.runes.mostGames.runes[i].number %>x</strong> <span class="rune-title"><%= championData.runes.mostGames.runes[i].name %> </span>
                    <span class="rune-benefits"><small><%= championData.runes.mostGames.runes[i].description %></small></span>
                  </div>
                  <div class="rune-info">
                    
                    
                  </div>
                </div>
                <% } %>
              </div>
              <div class="build-text"><strong><%= championData.runes.mostGames.winPercent %>%</strong> Win Rate | <strong><%= championData.runes.mostGames.games %></strong> Games </div>

              <h2 class="champion-stats" style="margin-top:45px">Highest Win % Runes</h2>
              <div class="rune-collection">
                <% for(var i = 0; i < championData.runes.highestWinPercent.runes.length; i++){ %> 
                <div class="rune-type-area" style="width:98%">
                  <div class="rune-img">
                    <img src="//ddragon.leagueoflegends.com/cdn/<%= pageData.core.ddPatch %>/img/rune/<%= championData.runes.highestWinPercent.runes[i].img %>" /> <strong><%= championData.runes.highestWinPercent.runes[i].number %>x</strong> <span class="rune-title"><%= championData.runes.highestWinPercent.runes[i].name %> </span>
                    <span class="rune-benefits"><small><%= championData.runes.highestWinPercent.runes[i].description %></small></span>
                  </div>
                  <div class="rune-info">
                    
                    
                  </div>
                </div>
                <% } %>
              </div>
              <div class="build-text"><strong><%= championData.runes.highestWinPercent.winPercent %>%</strong> Win Rate | <strong><%= championData.runes.highestWinPercent.games %></strong> Games </div>
            </div>
              </div>
              <% } %>
              </div>
            <div class="col-xs-12 col-sm-12 col-md-6 counter-column" style="border-right:none">
              <div class="row" style="margin-top:0px">
                <% if (championData.items.highestWinPercent) { %>
